<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kapodamy.twilighttweaker"
    >

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/TwiTheme"
        android:icon="@mipmap/ic_launcher">
        <meta-data
            android:name="xposedmodule"
            android:value="false" />
        <meta-data
            android:name="xposedminversion"
            android:value="53" />
        <meta-data
            android:name="xposeddescription"
            android:value="Tweak the auto-detecting for night themes" />

        <activity
            android:name=".TwiConfigActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/title_activity_twi_config">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TwiHours" />
        <activity android:name=".TwiAppPick" android:configChanges="orientation|screenSize|uiMode" />
    </application>

</manifest>